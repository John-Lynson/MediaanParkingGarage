<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEB</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome (for icons in bottom navigation) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <!-- Your own CSS files -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loaders.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/payment.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/welcome.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEB.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="welcome-page">
            <img src="~/css/images/logo.jpg" alt="ePark Logo" class="logo">
            <div class="loading-container">
                <img src="~/css/images/Animation.gif" alt="Loading..." class="loading-gif">
            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3 main-content">
            <!-- Added class for padding -->
            @RenderBody()
        </main>
    </div>

    <!-- Bottom Navigation Bar -->
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar fixed-bottom navbar-light bg-light border-top">
            <div class="container-fluid justify-content-around">
                <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i></a>
                <a class="nav-link" href="@Url.Action("Reserve", "Home")"><i class="fas fa-calendar"></i></a>
                <a class="nav-link" href="@Url.Action("RegisterPlate", "Home")"><i class="fas fa-car"></i></a>
                <a class="nav-link" href="@Url.Action("Payment", "Home")"><i class="fas fa-credit-card"></i></a>

                @{
                    var profilePictureUrl = User.Claims.FirstOrDefault(c => c.Type == "picture")?.Value;
                    if (!string.IsNullOrEmpty(profilePictureUrl))
                    {
                        <a class="nav-link" href="@Url.Action("About", "Home")">
                            <img src="@profilePictureUrl" alt="Profile" class="profile-photo" />
                        </a>
                    }
                    else
                    {
                        <a class="nav-link" href="@Url.Action("About", "Home")">
                            <i class="fas fa-user"></i>
                        </a>
                    }
                }
            </div>
        </nav>
    }


    <footer class="border-top footer text-muted">
        <!-- Footer content here -->
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Loaders.js" asp-append-version="true"></script>
    <script src="~/js/welcome.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
